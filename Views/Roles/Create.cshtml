@model string
@{
    ViewData["Title"] = "Create a Role";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Role</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        @@font-face {
            font-family: 'UndevelopedFont';
            src: url('/fonts/Undeveloped.ttf') format('truetype');
        }

        .navbar {
            background-color: rgba(194, 183, 172) !important;
        }

            .navbar .navbar-brand-custom {
                font-size: 2rem;
            }

        body {
            background-image: url('/images/movie.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        .content {
            flex: 1;
            padding-bottom: 60px;
            background-color: rgba(194, 183, 172, 0.95);
            border-radius: 20px;
            box-shadow: 3px 6px 8px rgba(0, 0, 0, 0.8);
        }

        h1 {
            font-family: 'UndevelopedFont';
            font-size: 5rem;
            text-align: center;
        }

        .form-group {
            font-size: 1.5rem;
            border-radius: 5px;
            padding: 10px;
        }
        .card {
            background-color: rgba(194, 183, 172, 0.95);
        }
    </style>
</head>

<body>
    <div class="content">
    <h1>Create a Role</h1>
    <a asp-action="Index" class="btn btn-secondary mb-3">Back</a>

    <form asp-action="Create" method="post">
        <div class="card">
            <div class="card-body">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label for="name">Role Name:</label>
                    <input name="name" class="form-control" />
                </div>

                    <button type="submit" class="btn btn-success">Create</button>
            </div>
        </div>
    </form>
</div>
</body>
</html>
