@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Roles List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        @@font-face {
            font-family: 'UndevelopedFont';
            src: url('/fonts/Undeveloped.ttf') format('truetype');
        }

        .navbar {
            background-color: rgba(194, 183, 172) !important;
        }

            .navbar .navbar-brand-custom {
                font-size: 2rem;
            }

        .content {
            flex: 1;
            padding-bottom: 60px;
            background-color: rgba(194, 183, 172, 0.95);
            border-radius: 20px;
            box-shadow: 3px 6px 8px rgba(0, 0, 0, 0.8);
            margin-top: 20px;
        }

        h1 {
            font-family: 'UndevelopedFont';
            font-size: 5rem;
            text-align: center;
            color: #333;
        }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
        }

        .btn-primary, .btn-danger {
            font-size: 0.9rem;
            padding: 0.4rem 0.8rem;
            margin-left:5px;
        }

        .table {
            background-color: rgba(220, 216, 202, 0.8);
            border-radius: 10px;
            box-shadow: 2px 4px 6px rgba(0, 0, 0, 0.5);
        }

            .table thead th {
                font-size: 1.5rem;
                font-family: 'Baskerville Old Face';
                color: #333;
                background-color: rgba(220, 216, 202, 0.8);
            }

            .table tbody tr:hover {
                background-color: rgba(220, 216, 202, 0.8);
            }
    </style>
</head>
<body>
    <div class="container content">
    <h1>All Roles</h1>
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-info">Create a Role</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Actions</th>
                    <th scope="col">ID</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td>
                            <div class="btn-group" role="group">
                                    <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Update</a>
                                <form asp-action="Delete" asp-route-id="@role.Id" method="post"
                                      onsubmit="return confirm('Are you sure you want to delete this role?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                        <td>@role.Id</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</body>
</html>
